<Window x:Class="Fixture_Maker_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fixture_Maker_App"
        xmlns:h="http://helix-toolkit.org/wpf"
        mc:Ignorable="d"
        Title="Fixture Maker" Height="450" Width="800">
    <DockPanel>
        <!-- Sidebar -->
        <StackPanel DockPanel.Dock="Left" Width="189" Background="#EEE">
            <!--- controls go here -->
            <Label Content="Fixture Settings"/>

            <CheckBox Content="Enable Baseplate"/>

            <Button Content="Load STL" Click="OnLoadStlClicked" Margin="5"/>

            <Label x:Name="FileNameText" Content="No file loaded."/>

        </StackPanel>

        <h:HelixViewport3D Name="MainViewPort">
            <h:DefaultLights/>
        </h:HelixViewport3D>
        
    </DockPanel>
</Window>
